{
  "info": {
    "name": "Notes App API - Full",
    "_postman_id": "final-collection-001",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Demo User\", \"email\": \"demo@example.com\", \"password\": \"demo1234\"}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"demo@example.com\", \"password\": \"demo1234\"}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login"
        }
      }
    },
    {
      "name": "Get Notes (Auth required)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer <token>"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/notes"
        }
      }
    }
  ]
}